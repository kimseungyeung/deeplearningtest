<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@color/skyblue"
            android:orientation="horizontal"
            android:layout_weight="0.8">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center_vertical">
            <ImageButton
                android:id="@+id/imbtn_preview"
                android:layout_width="60dp"
                android:layout_height="60dip"
                android:text="back"
                android:background="@color/transparent"
                android:src="@drawable/back"
                android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_utext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/White"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@color/rowgrey"
            android:orientation="vertical"
            android:padding="20dip"
            android:layout_weight="9">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="피보험자"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/edt_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@null"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="진행상태"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/edt_sstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@null"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="진단명"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/edt_stname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@null"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="중간보고"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/edt_sreport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@null"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="보상담당"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/edt_reward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@null"
                    android:enabled="false"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dip"
                    android:layout_height="wrap_content"
                    android:text="조사자"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
                <EditText
                    android:id="@+id/edt_research"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@null"
                    android:enabled="false"/>
            </LinearLayout>



    </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>