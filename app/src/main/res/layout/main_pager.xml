<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@color/skyblue"
            android:orientation="horizontal"
            android:layout_weight="0.8">
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>
            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">
            <ImageButton
                android:id="@+id/imbtn_left_menu"
                android:layout_width="60dp"
                android:layout_height="60dip"
                android:layout_gravity="right"
                android:background="@color/transparent"
                android:src="@drawable/menu"
                android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.4"
            android:background="@color/blue">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="공지사항테스트"
                android:textColor="@color/White"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:gravity="center"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_nopayment"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nopayment_details"
               />
            <Button
                android:id="@+id/btn_payment"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/payment_details"/>
            <Button
                android:id="@+id/btn_closeing"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/closeing_details"/>
            <Button
                android:id="@+id/btn_calendar"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/calendar_management"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:background="@color/Orange"
            android:layout_weight="8"/>
<!--<net.alhazmy13.wordcloud.WordCloudView-->
    <!--android:id="@+id/testword"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dip"-->
    <!--android:layout_weight="8"-->
    <!--android:background="@drawable/ic_launcher_foreground"></net.alhazmy13.wordcloud.WordCloudView>-->

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="240dip"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/White"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_inmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="out"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_launcher_background"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tv_nickname_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="헤더입니다"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="normal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/left_menu"
            android:layout_width="240dip"
            android:layout_height="match_parent"
            android:background="@color/White"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp" />
    </LinearLayout>
    <!-- The navigation drawer -->

</android.support.v4.widget.DrawerLayout>